<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PinSaver.Base" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">?android:windowBackground</item>
        <item name="toolbarStyle">@style/Theme.PinSaver.Toolbar</item>
    </style>

    <style name="Theme.PinSaver" parent="Theme.PinSaver.Base">
        <item name="colorPrimary">@color/CP</item>
        <item name="colorPrimaryDark">@color/CPD</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorSeparator">@color/lSep</item>
        <item name="android:textColor">@color/TCL</item>
        <item name="android:windowBackground">@color/BGL</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <attr name="colorSeparator" format="reference|color" />

    <style name="Theme.PinSaver.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">?attr/colorPrimaryDark</item>
    </style>
</resources>